<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="items.xsd">

    <enumtypes>
        <enumtype generate="true" code="IngenicoCheckoutTypesEnum" autocreate="true">
            <description>Checkout types for card payments</description>
            <value code="HOSTED_CHECKOUT" />
            <value code="HOSTED_TOKENIZATION" />
        </enumtype>
        <enumtype generate="true" code="OperationCodesEnum" autocreate="true">
            <description>Checkout types for card payments</description>
            <value code="SALE" />
            <value code="PRE_AUTHORIZATION" />
        </enumtype>
    </enumtypes>

    <itemtypes>
        <itemtype code="PaymentMode"
                  extends="GenericItem"
                  jaloclass="de.hybris.platform.jalo.order.payment.PaymentMode"
                  autocreate="false"
                  generate="false">
            <attributes>
                <attribute qualifier="ingenicoCheckoutType" type="IngenicoCheckoutTypesEnum">
                    <modifiers read="true" write="true" />
                    <persistence type="property" />
                    <defaultvalue>em().getEnumerationValue("IngenicoCheckoutTypesEnum","HOSTED_CHECKOUT")</defaultvalue>
                </attribute>
                <attribute qualifier="defaultOperationCode" type="OperationCodesEnum">
                    <modifiers read="true" write="true" />
                    <persistence type="property" />
                    <defaultvalue>em().getEnumerationValue("OperationCodesEnum","SALE")</defaultvalue>
                </attribute>
                <attribute qualifier="captureTimeFrame" type="java.lang.Integer">
                    <modifiers read="true" write="true" />
                    <persistence type="property" />
                    <defaultvalue>Integer.valueOf(0)</defaultvalue>
                </attribute>
            </attributes>
        </itemtype>
    </itemtypes>
</items>
