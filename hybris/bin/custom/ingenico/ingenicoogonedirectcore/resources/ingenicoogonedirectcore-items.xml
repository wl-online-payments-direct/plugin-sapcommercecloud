<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="items.xsd">

    <enumtypes>
        <enumtype generate="true" code="IngenicoCheckoutTypesEnum" autocreate="true">
            <description>Checkout types for card payments</description>
            <value code="HOSTED_CHECKOUT" />
            <value code="HOSTED_TOKENIZATION" />
        </enumtype>
    </enumtypes>

    <itemtypes>
        <itemtype code="PaymentMode"
                  extends="GenericItem"
                  jaloclass="de.hybris.platform.jalo.order.payment.PaymentMode"
                  autocreate="false"
                  generate="false">
            <attributes>
                <attribute qualifier="ingenicoCheckoutType" type="IngenicoCheckoutTypesEnum">
                    <modifiers read="true" write="true" />
                    <persistence type="property" />
                    <defaultvalue>em().getEnumerationValue("IngenicoCheckoutTypesEnum","HOSTED_CHECKOUT")</defaultvalue>
                </attribute>
            </attributes>
        </itemtype>
        <itemtype code="IngenicoConfiguration"
                  extends="GenericItem"
                  autocreate="true"
                  generate="true">
            <description>Item type which will keep all required data for exchanging information with payment provider</description>
            <deployment table="ingenicoConfiguration" typecode="15001"/>
            <attributes>
                <attribute qualifier="merchantID" type="java.lang.String">
                    <modifiers read="true" write="true" optional="false" />
                    <persistence type="property" />
                </attribute>
                <attribute qualifier="endpointURL" type="java.lang.String">
                    <modifiers read="true" write="true" optional="false" />
                    <persistence type="property" />
                </attribute>
                <attribute qualifier="apiKey" type="java.lang.String">
                    <modifiers read="true" write="true" optional="false" />
                    <persistence type="property" />
                </attribute>
                <attribute qualifier="apiSecret" type="java.lang.String">
                    <modifiers read="true" write="true" optional="false" />
                    <persistence type="property" />
                </attribute>
            </attributes>
        </itemtype>

        <itemtype code="BaseStore" autocreate="false" generate="false" extends="GenericItem">
            <attributes>
                <attribute qualifier="ingenicoConfiguration" type="IngenicoConfiguration">
                    <modifiers read="true" write="true" />
                    <persistence type="property" />
                </attribute>
            </attributes>
        </itemtype>
    </itemtypes>
</items>
