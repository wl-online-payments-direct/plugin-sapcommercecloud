<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="ingenicoConfigurationService"
          class="com.ingenico.ogone.direct.service.impl.IngenicoConfigurationServiceImpl">
        <property name="baseStoreService" ref="baseStoreService"/>
        <property name="ingenicoClientFactory" ref="ingenicoClientFactory"/>
    </bean>

    <bean id="ingenicoPaymentService" class="com.ingenico.ogone.direct.service.impl.IngenicoPaymentServiceImpl">
        <property name="cartService" ref="cartService"/>
        <property name="ingenicoClientFactory" ref="ingenicoClientFactory"/>
        <property name="ingenicoConfigurationService" ref="ingenicoConfigurationService"/>
        <property name="ingenicoAmountUtils" ref="ingenicoAmountUtils"/>
        <property name="ingenicoHostedCheckoutParamConverter" ref="ingenicoHostedCheckoutParamConverter"/>
        <property name="ingenicoHostedTokenizationParamConverter" ref="ingenicoHostedTokenizationParamConverter"/>
    </bean>


    <bean id="ingenicoCustomerAccountService"
          class="com.ingenico.ogone.direct.service.impl.IngenicoCustomerAccountServiceImpl">
        <property name="ingenicoCustomerAccountDao" ref="ingenicoCustomerAccountDao"/>
    </bean>

    <bean id="ingenicoTransactionService"
          class="com.ingenico.ogone.direct.service.impl.IngenicoTransactionServiceImpl">
        <property name="modelService" ref="modelService"/>
    </bean>


</beans>