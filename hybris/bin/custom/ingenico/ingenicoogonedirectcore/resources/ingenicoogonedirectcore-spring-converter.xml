<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="ingenicoPaymentInfoPopulator" class="com.ingenico.ogone.direct.populator.IngenicoPaymentInfoPopulator">
        <property name="addressConverter" ref="addressConverter"/>
    </bean>

    <bean id="ingenicoPaymentInfoConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="com.ingenico.ogone.direct.order.data.IngenicoPaymentInfoData"/>
        <property name="populators">
            <list>
                <ref bean="ingenicoPaymentInfoPopulator"/>
            </list>
        </property>
    </bean>

    <bean id="ingenicoOrderRequestParamPopulator"
          class="com.ingenico.ogone.direct.populator.IngenicoOrderRequestParamPopulator">
        <property name="ingenicoAmountUtils" ref="ingenicoAmountUtils"/>
    </bean>

    <bean id="ingenicoShoppingCartRequestParamPopulator"
          class="com.ingenico.ogone.direct.populator.IngenicoShoppingCartRequestParamPopulator">
        <property name="ingenicoAmountUtils" ref="ingenicoAmountUtils"/>
    </bean>

    <bean id="ingenicoCustomerRequestParamPopulator"
          class="com.ingenico.ogone.direct.populator.IngenicoCustomerRequestParamPopulator">
        <property name="commonI18NService" ref="commonI18NService"/>
        <property name="customerEmailResolutionService" ref="customerEmailResolutionService"/>
    </bean>

    <bean id="ingenicoOrderParamConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="com.ingenico.direct.domain.Order"/>
        <property name="populators">
            <list>
                <ref bean="ingenicoOrderRequestParamPopulator"/>
<!--                <ref bean="ingenicoShoppingCartRequestParamPopulator"/>-->
                <ref bean="ingenicoCustomerRequestParamPopulator"/>
            </list>
        </property>
    </bean>

    <bean id="ingenicoHostedCheckoutBasicPopulator"
          class="com.ingenico.ogone.direct.populator.hostedcheckout.IngenicoHostedCheckoutBasicPopulator">
        <property name="sessionService" ref="sessionService"/>
        <property name="i18NService" ref="i18NService"/>
        <property name="ingenicoUserFacade" ref="ingenicoUserFacade"/>
        <property name="ingenicoOrderParamConverter" ref="ingenicoOrderParamConverter"/>
    </bean>

    <bean id="ingenicoHostedCheckoutCardPopulator"
          class="com.ingenico.ogone.direct.populator.hostedcheckout.IngenicoHostedCheckoutCardPopulator">
        <property name="ingenicoConfigurationService" ref="ingenicoConfigurationService"/>
    </bean>

    <bean id="ingenicoHostedCheckoutRedirectPopulator"
          class="com.ingenico.ogone.direct.populator.hostedcheckout.IngenicoHostedCheckoutRedirectPopulator">
        <property name="sessionService" ref="sessionService"/>
        <property name="ingenicoConfigurationService" ref="ingenicoConfigurationService"/>

    </bean>

    <bean id="ingenicoHostedCheckoutMobilePopulator"
          class="com.ingenico.ogone.direct.populator.hostedcheckout.IngenicoHostedCheckoutMobilePopulator">
    </bean>

    <bean id="ingenicoHostedCheckoutParamConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="com.ingenico.direct.domain.CreateHostedCheckoutRequest"/>
        <property name="populators">
            <list>
                <ref bean="ingenicoHostedCheckoutBasicPopulator"/>
                <ref bean="ingenicoHostedCheckoutCardPopulator"/>
                <ref bean="ingenicoHostedCheckoutRedirectPopulator"/>
                <ref bean="ingenicoHostedCheckoutMobilePopulator"/>
            </list>
        </property>
    </bean>


    <bean id="ingenicoHostedTokenizationPaymentPopulator"
          class="com.ingenico.ogone.direct.populator.hostedtokenization.IngenicoHostedTokenizationPaymentPopulator">
        <property name="ingenicoOrderParamConverter" ref="ingenicoOrderParamConverter"/>
        <property name="sessionService" ref="sessionService"/>
        <property name="ingenicoConfigurationService" ref="ingenicoConfigurationService"/>
    </bean>

    <bean id="ingenicoHostedTokenizationParamConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="com.ingenico.direct.domain.CreatePaymentRequest"/>
        <property name="populators">
            <list>
                <ref bean="ingenicoHostedTokenizationPaymentPopulator"/>
            </list>
        </property>
    </bean>

    <bean name="ingenicoCartPopulator" class="com.ingenico.ogone.direct.populator.IngenicoCartPopulator">
        <property name="ingenicoPaymentInfoConverter" ref="ingenicoPaymentInfoConverter"/>
    </bean>

    <bean parent="modifyPopulatorList">
        <property name="list" ref="cartConverter"/>
        <property name="add" ref="ingenicoCartPopulator"/>
    </bean>

    <bean parent="modifyPopulatorList">
        <property name="list" ref="extendedCartConverter"/>
        <property name="add" ref="ingenicoCartPopulator"/>
    </bean>

    <bean name="ingenicoOrderPopulator" class="com.ingenico.ogone.direct.populator.IngenicoOrderPopulator">
        <property name="ingenicoPaymentInfoConverter" ref="ingenicoPaymentInfoConverter"/>
    </bean>

    <bean parent="modifyPopulatorList">
        <property name="list" ref="orderConverter"/>
        <property name="add" ref="ingenicoOrderPopulator"/>
    </bean>
</beans>