<action-definition id="com.ingenico.ogone.direct.actions.ingenicomanualpaymentrefundaction" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   extends="de.hybris.ordermanagementbackoffice.actions.returns.manualrefundaction" xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>Manual Payment Refund Action</name>
    <description>Action for requesting refund on captured payments manually</description>
    <author>hybris</author>
    <version>1.0</version>

    <actionClassName>com.ingenico.ogone.direct.actions.IngenicoManualPaymentRefundAction</actionClassName>

    <inputType>de.hybris.platform.returns.model.ReturnRequestModel</inputType>
    <outputType>de.hybris.platform.returns.model.ReturnRequestModel</outputType>

    <!-- folder icons with the icons must be created in the following directory: myextension/backoffice/resources/widgets/actions/myaction -->
    <iconUri>icons/icon_action_manualrefund_default.png</iconUri>
    <iconHoverUri>icons/icon_action_manualrefund_hover.png</iconHoverUri>
    <iconDisabledUri>icons/icon_action_manualrefund_disabled.png</iconDisabledUri>

    <settings>
        <setting key="viewMode" default-value="iconAndText"/>
    </settings>

</action-definition>
