<action-definition id="com.ingenico.ogone.direct.actions.ingenicomanualpaymentreverseauthaction" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>Manual Payment Reverse Auth Action</name>
    <description>Action reverse uncaptured payments manually</description>
    <author>hybris</author>
    <version>1.0</version>

    <actionClassName>com.ingenico.ogone.direct.actions.IngenicoManualPaymentReverseAuthAction</actionClassName>

    <inputType>de.hybris.platform.core.model.order.OrderModel</inputType>
    <outputType>de.hybris.platform.core.model.order.OrderModel</outputType>

    <!-- folder icons with the icons must be created in the following directory: myextension/backoffice/resources/widgets/actions/myaction -->
    <iconUri>icons/icon_action_cancel_default.png</iconUri>
    <iconHoverUri>icons/icon_action_cancel_hover.png</iconHoverUri>
    <iconDisabledUri>icons/icon_action_cancel_disabled.png</iconDisabledUri>

    <settings>
        <setting key="viewMode" default-value="iconAndText"/>
    </settings>

</action-definition>
