<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:annotation-config/> 

	<bean id="ingenicoogonedirectb2ccheckoutaddonCoreDataImportedEventListener" parent="abstractCoreDataImportedEventListener">
		<property name="supportedChannels">
			<list value-type="de.hybris.platform.commerceservices.enums.SiteChannel">
				<value>B2C</value>
				<!--
								<value>B2B</value>
				-->
			</list>
		</property>
		<property name="addonExtensionMetadata">
			<bean class="de.hybris.platform.addonsupport.data.AddonExtensionMetadata">
				<property name="suffixChannel" value="false"/>
				<property name="baseExtensionName" value="ingenicoogonedirectb2ccheckoutaddon"/>
			</bean>
		</property>
	</bean>

	<bean id="ingenicoogonedirectb2ccheckoutaddonSampleDataEventListener" parent="abstractGenericAddOnSampleDataEventListener"  >
		<property name="extensionName" value="ingenicoogonedirectb2ccheckoutaddon" />
	</bean>

	<!-- Custom checkoutFlowFacade-->
	<alias name="ingenicoCheckoutFlowFacade" alias="checkoutFlowFacade"/>
	<bean id="ingenicoCheckoutFlowFacade" class="com.ingenico.ogone.direct.acceleratorfacades.flow.impl.IngenicoCheckoutFlowFacadeImpl" parent="defaultCheckoutFlowFacade" >
		<property name="commercePaymentProviderStrategy" ref="commercePaymentProviderStrategy"/>
	</bean>

</beans>
