<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Fieldset mapping -->

    <bean parent="fieldSetLevelMapping" id="ingenicoAbstractOrderWsDTOFieldSetLevelMapping">
        <property name="dtoClass"
                  value="de.hybris.platform.commercewebservicescommons.dto.order.AbstractOrderWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="ingenicoPaymentInfo(BASIC)"/>
                <entry key="DEFAULT" value="ingenicoPaymentInfo(DEFAULT)"/>
                <entry key="FULL" value="ingenicoPaymentInfo(FULL)"/>
            </map>
        </property>
    </bean>
    <bean parent="fieldSetLevelMapping" id="ingenicoCartWsDTOFieldSetLevelMapping">
        <property name="dtoClass"
                  value="de.hybris.platform.commercewebservicescommons.dto.order.CartWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="ingenicoPaymentInfo(BASIC)"/>
                <entry key="DEFAULT" value="ingenicoPaymentInfo(DEFAULT)"/>
                <entry key="FULL" value="ingenicoPaymentInfo(FULL)"/>
            </map>
        </property>
    </bean>

    <bean parent="fieldSetLevelMapping" id="ingenicoPaymentInfoWsDTOFieldSetLevelMapping">
        <property name="dtoClass" value="com.ingenico.ogone.direct.payment.dto.IngenicoPaymentInfoWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="paymentProductId,paymentMethod,issuerId,ingenicoCheckoutType"/>
                <entry key="DEFAULT" value="BASIC,billingAddress(DEFAULT),ingenicoCheckoutType"/>
                <entry key="FULL" value="BASIC,billingAddress(FULL),ingenicoCheckoutType"/>
            </map>
        </property>
    </bean>

    <bean parent="fieldSetLevelMapping" id="paymentProductListWsDTOFieldSetLevelMapping">
        <property name="dtoClass" value="com.ingenico.ogone.direct.payment.dto.PaymentProductListWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="paymentProducts"/>
                <entry key="DEFAULT" value="paymentProducts(DEFAULT)"/>
                <entry key="FULL" value="paymentProducts(FULL)"/>
            </map>
        </property>
    </bean>


    <bean parent="fieldSetLevelMapping" id="paymentProductFieldSetLevelMapping">
        <property name="dtoClass" value="com.ingenico.ogone.direct.payment.dto.PaymentProductWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="id,paymentMethod,displayHints,productDirectory"/>
                <entry key="DEFAULT" value="id,paymentMethod,displayHints(DEFAULT),productDirectory(DEFAULT)"/>
                <entry key="FULL" value="id,paymentMethod,displayHints(FULL),productDirectory(FULL)"/>
            </map>
        </property>
    </bean>

    <bean parent="fieldSetLevelMapping" id="paymentProductDisplayHintFieldSetLevelMapping">
        <property name="dtoClass" value="com.ingenico.ogone.direct.payment.dto.PaymentProductDisplayHintsWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="label"/>
                <entry key="DEFAULT" value="BASIC,logo"/>
                <entry key="FULL" value="DEFAULT,displayOrder"/>
            </map>
        </property>
    </bean>

    <bean parent="fieldSetLevelMapping" id="hostedTokenizationFieldSetLevelMapping">
        <property name="dtoClass" value="com.ingenico.ogone.direct.payment.dto.HostedTokenizationResponseWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="hostedTokenizationId,redirectURL,savedTokens(BASIC)"/>
                <entry key="DEFAULT" value="BASIC,savedTokens(DEFAULT)"/>
                <entry key="FULL" value="BASIC,savedTokens(FULL)"/>
            </map>
        </property>
    </bean>

    <bean parent="fieldSetLevelMapping" id="savedTokenFieldSetLevelMapping">
        <property name="dtoClass" value="com.ingenico.ogone.direct.payment.dto.SavedTokenWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="token,cardBrand,alias,cardholderName,expiryDate,type"/>
                <entry key="DEFAULT" value="BASIC"/>
                <entry key="FULL" value="DEFAULT"/>
            </map>
        </property>
    </bean>

    <bean parent="fieldSetLevelMapping" id="directoryEntryFieldSetLevelMapping">
        <property name="dtoClass" value="com.ingenico.ogone.direct.payment.dto.DirectoryEntryWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="issuerId,issuerList,entries"/>
                <entry key="DEFAULT" value="BASIC"/>
                <entry key="FULL" value="DEFAULT"/>
            </map>
        </property>
    </bean>

    <bean parent="fieldSetLevelMapping" id="productDirectoryFieldSetLevelMapping">
        <property name="dtoClass" value="com.ingenico.ogone.direct.payment.dto.ProductDirectoryWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="entries"/>
                <entry key="DEFAULT" value="entries(DEFAULT)"/>
                <entry key="FULL" value="entries(FULL)"/>
            </map>
        </property>
    </bean>

    <bean parent="fieldSetLevelMapping" id="hostedCheckoutResponseFieldSetLevelMapping">
        <property name="dtoClass" value="com.ingenico.ogone.direct.payment.dto.HostedCheckoutResponseWsDTO"/>
        <property name="levelMapping">
            <map>
                <entry key="BASIC" value="hostedCheckoutId,redirectURL"/>
                <entry key="DEFAULT" value="BASIC"/>
                <entry key="FULL" value="DEFAULT"/>
            </map>
        </property>
    </bean>

    <!-- Field Mappings  -->

    <bean id="hostedTokenizationFieldMapper" parent="fieldMapper">
        <property name="sourceClass"
                  value="com.ingenico.direct.domain.CreateHostedTokenizationResponse"/>
        <property name="destClass"
                  value="com.ingenico.ogone.direct.payment.dto.HostedTokenizationResponseWsDTO"/>
        <property name="fieldMapping">
            <map>
                <entry key="partialRedirectUrl" value="redirectURL"/>
            </map>
        </property>
    </bean>

    <bean id="hostedCheckoutFieldMapper" parent="fieldMapper">
        <property name="sourceClass"
                  value="com.ingenico.direct.domain.CreateHostedCheckoutResponse"/>
        <property name="destClass"
                  value="com.ingenico.ogone.direct.payment.dto.HostedCheckoutResponseWsDTO"/>
        <property name="fieldMapping">
            <map>
                <entry key="partialRedirectUrl" value="redirectURL"/>
            </map>
        </property>
    </bean>

    <bean id="IngenicoPaymentDetailsFieldMapper" parent="fieldMapper">
        <property name="sourceClass"
                  value="com.ingenico.ogone.direct.order.data.IngenicoPaymentInfoData"/>
        <property name="destClass"
                  value="com.ingenico.ogone.direct.payment.dto.IngenicoPaymentDetailsWsDTO"/>
        <property name="fieldMapping">
            <map>
                <entry key="id" value="paymentProductId"/>
                <entry key="paymentProductDirectoryId" value="issuerId"/>
            </map>
        </property>
    </bean>

    <!-- CONVERTER -->
    <bean class="com.ingenico.ogone.direct.occ.converter.IngenicoCheckoutTypeConverter"/>

</beans>
