<config xmlns="http://www.hybris.com/cockpit/config"
		xmlns:yc="http://www.hybris.com/cockpitng/config/common"
		xmlns:y="http://www.hybris.com/cockpit/config/hybris"
		xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config"
		xmlns:cb="http://www.hybris.com/cockpitng/config/collectionbrowser"
		xmlns:cv="http://www.hybris.com/cockpitng/component/compareview"
		xmlns:lv="http://www.hybris.com/cockpitng/component/listView"
		xmlns:ea="http://www.hybris.com/cockpitng/component/editorArea"
		xmlns:et="http://www.hybris.com/cockpitng/config/explorertree"
		xmlns:ss="http://www.hybris.com/cockpitng/config/simplesearch"
		xmlns:as="http://www.hybris.com/cockpitng/config/advancedsearch"
		xmlns:df="http://www.hybris.com/cockpitng/component/dynamicForms"
		xmlns:dsb="http://www.hybris.com/cockpitng/config/dashboard"
		xmlns:na="http://www.hybris.com/cockpitng/config/notifications"
		xmlns:gv="http://www.hybris.com/cockpitng/component/gridView">

	<context merge-by="type" parent="GenericItem" type="PaymentMode" component="editor-area">
		<ea:editorArea name="">
			<ea:essentials>
				<ea:essentialSection name="hmc.essential">
					<ea:attribute qualifier="code"/>
					<ea:attribute qualifier="name"/>
				</ea:essentialSection>
			</ea:essentials>
			<ea:tab name="hmc.properties">
				<ea:section name="hmc.ingenico">
					<ea:attribute qualifier="ingenicoCheckoutType"/>
					<ea:attribute qualifier="defaultOperationCode"/>
					<ea:attribute qualifier="captureTimeFrame"/>
				</ea:section>
			</ea:tab>
		</ea:editorArea>
	</context>

	<!-- IngenicoConfiguration BO appearance START -->

	<context merge-by="module" parent="auto" component="explorer-tree">
		<et:explorer-tree>
			<et:navigation-node id="hmc.ingenico">
				<et:type-node code="IngenicoConfiguration" id="hmc.ingenicoConfiguration"/>
			</et:navigation-node>
		</et:explorer-tree>
	</context>

	<context merge-by="type" parent="GenericItem" type="IngenicoConfiguration" component="listview">
		<lv:list-view>
			<lv:column qualifier="merchantID"/>
			<lv:column qualifier="ApiKey"/>
		</lv:list-view>
	</context>

	<context merge-by="type" parent="GenericItem" type="IngenicoConfiguration" component="advanced-search">
		<as:advanced-search>
			<as:field-list>
				<as:field name="merchantID" selected="true"/>
			</as:field-list>
		</as:advanced-search>
	</context>

	<context merge-by="type" parent="GenericItem" type="IngenicoConfiguration" component="editor-area">
		<ea:editorArea name="">
			<ea:essentials>
				<ea:essentialSection name="hmc.essential">
					<ea:attribute qualifier="merchantID"/>
					<ea:attribute qualifier="ApiKey"/>
				</ea:essentialSection>
			</ea:essentials>
			<ea:tab name="hmc.ingenico">
				<ea:section name="hmc.ingenicoConfiguration">
					<ea:attribute qualifier="merchantID"/>
					<ea:attribute qualifier="endpointURL"/>
					<ea:attribute qualifier="ApiKey"/>
					<ea:attribute qualifier="ApiSecret"/>
				</ea:section>
			</ea:tab>
		</ea:editorArea>
	</context>

	<!-- IngenicoConfiguration display name when viewing all attributes -->
	<context type="IngenicoConfiguration" component="base" merge-by="type" parent="GenericItem">
		<y:base>
			<y:labels>
				<y:label>merchantID</y:label>
			</y:labels>
		</y:base>
	</context>

	<!-- IngenicoConfiguration BO appearance END -->

	<!-- BaseStore update BO appearance START -->
	<context merge-by="type" parent="GenericItem" type="BaseStore" component="editor-area">
		<ea:editorArea name="">
			<ea:tab name="hmc.ingenico">
				<ea:section name="hmc.ingenico.ingenicoConfiguration">
					<ea:attribute qualifier="ingenicoConfiguration"/>
				</ea:section>
			</ea:tab>
		</ea:editorArea>
	</context>
	<!-- BaseStore update BO appearance END -->

	<!-- IngenicoPaymentInfo BO appearance -->
	<context merge-by="type" parent="PaymentInfo" type="IngenicoPaymentInfo">
		<context component="base">
			<y:base>
				<y:labels>
					<y:label>id - paymentMethod</y:label>
				</y:labels>
			</y:base>
		</context>
		<context component="listview">
			<lv:list-view >
				<lv:column qualifier="id" />
				<lv:column qualifier="paymentMethod" />
				<lv:column qualifier="ingenicoCheckoutType" />
			</lv:list-view>
		</context>
		<context component="simple-search">
			<ss:simple-search>
				<ss:field name="id"/>
				<ss:sort-field name="id" asc="true"/>
			</ss:simple-search>
		</context>
		<context component="advanced-search">
			<as:advanced-search>
				<as:field-list>
					<as:field name="id" operator="contains" selected="true"/>
					<as:field name="paymentMethod" operator="contains" selected="true"/>
					<as:field name="ingenicoCheckoutType" operator="equals" selected="true"/>
					<as:field name="creationTime" operator="greaterOrEquals"/>
				</as:field-list>
				<as:sort-field name="creationTime" asc="false"/>
			</as:advanced-search>
		</context>
		<context component="editor-area">
			<ea:editorArea>
				<ea:tab name="hmc.ingenico">
					<ea:section name="hmc.ingenico.ingenicoPaymentInfo">
						<ea:attribute qualifier="id"/>
						<ea:attribute qualifier="paymentMethod"/>
						<ea:attribute qualifier="ingenicoCheckoutType"/>
					</ea:section>
				</ea:tab>
			</ea:editorArea>
		</context>
	</context>
	<!-- IngenicoPaymentInfo BO appearance END -->

</config>
