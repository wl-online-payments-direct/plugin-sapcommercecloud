<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="beans.xsd">

    <bean class="com.ingenico.ogone.direct.payment.PaymentProductDisplayHintsWsDTO">
        <description>PaymentProduct display hints</description>
        <hints>
            <hint name="wsRelated"/>
            <hint name="alias">DisplayHints</hint>
        </hints>
        <property name="displayOrder" type="String"/>
        <property name="label" type="String"/>
        <property name="logo" type="String"/>
    </bean>

    <bean class="com.ingenico.ogone.direct.payment.PaymentProductWsDTO">
        <description>PaymentProduct</description>
        <hints>
            <hint name="wsRelated"/>
            <hint name="alias">PaymentProduct</hint>
        </hints>
        <property name="id" type="String"/>
        <property name="paymentMethod" type="String"/>
        <property name="displayHints" type="com.ingenico.ogone.direct.payment.PaymentProductDisplayHintsWsDTO"/>
    </bean>

    <bean class="com.ingenico.ogone.direct.payment.HostedTokenizationResponseWsDTO">
        <description>Hosted Tokenization Response</description>
        <hints>
            <hint name="wsRelated"/>
            <hint name="alias">HostedTokenizationResponse</hint>
        </hints>
        <property name="hostedTokenizationId" type="String"/>
        <property name="redirectUrl" type="String"/>
        <property name="tokens" type="java.util.List&lt;String>"/>
    </bean>

    <bean class="com.ingenico.ogone.direct.payment.DirectoryEntryWsDTO">
        <description>Directory Entry</description>
        <hints>
            <hint name="wsRelated"/>
            <hint name="alias">DirectoryEntry</hint>
        </hints>
        <property name="issuerId" type="String"/>
        <property name="issuerList" type="String"/>
        <property name="issuerName" type="String"/>
    </bean>

    <bean class="com.ingenico.ogone.direct.payment.RedirectDataWsDTO">
        <description>Redirect Data</description>
        <hints>
            <hint name="wsRelated"/>
            <hint name="alias">RedirectData</hint>
        </hints>
        <property name="redirectURL" type="String"/>
    </bean>

    <bean class="com.ingenico.ogone.direct.payment.MerchantActionWsDTO">
        <description>Merchant Action</description>
        <hints>
            <hint name="wsRelated"/>
            <hint name="alias">MerchantAction</hint>
        </hints>
        <property name="actionType" type="String"/>
        <property name="redirectData" type="com.ingenico.ogone.direct.payment.RedirectDataWsDTO"/>
    </bean>

    <bean class="com.ingenico.ogone.direct.payment.CreatePaymentResponseWsDTO">
        <description>Create Payment Response</description>
        <hints>
            <hint name="wsRelated"/>
            <hint name="alias">CreatePaymentResponse</hint>
        </hints>
        <property name="MerchantAction" type="com.ingenico.ogone.direct.payment.MerchantActionWsDTO"/>
        <property name="PaymentResponse" type="com.ingenico.ogone.direct.payment.PaymentResponseWsDTO"/>
    </bean>

    <bean class="com.ingenico.ogone.direct.payment.PaymentResponseWsDTO">
        <description>Payment Response</description>
        <hints>
            <hint name="wsRelated"/>
            <hint name="alias">PaymentResponse</hint>
        </hints>
        <property name="id" type="String"/>
        <property name="status" type="String"/>
    </bean>



</beans>
