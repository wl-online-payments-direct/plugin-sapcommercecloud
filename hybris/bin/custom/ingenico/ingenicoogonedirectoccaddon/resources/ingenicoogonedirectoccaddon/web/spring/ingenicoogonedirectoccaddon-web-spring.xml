<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:component-scan base-package="com.ingenico.ogone.direct.controllers"/>

	<!-- Cache manager for addon -->

	<alias name="defaultIngenicoogonedirectoccaddonCacheManager" alias="ingenicoogonedirectoccaddonCacheManager"/>
	<bean id="defaultIngenicoogonedirectoccaddonCacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager">
		<property name="cacheManager" ref="ingenicoogonedirectoccaddonEhcache"/>
	</bean>

	<alias name="defaultIngenicoogonedirectoccaddonEhcache" alias="ingenicoogonedirectoccaddonEhcache"/>
	<bean id="defaultIngenicoogonedirectoccaddonEhcache" class="de.hybris.platform.webservicescommons.cache.TenantAwareEhCacheManagerFactoryBean">
		<property name="cacheNamePrefix" value="ingenicoogonedirectoccaddonCache_"/>
		<property name="configLocation" value="/WEB-INF/cache/addons/ingenicoogonedirectoccaddon/ehcache.xml"/>
	</bean>

	<bean depends-on="wsCacheManagerList" parent="listMergeDirective">
		<property name="add" ref="ingenicoogonedirectoccaddonCacheManager"/>
	</bean>

</beans>
